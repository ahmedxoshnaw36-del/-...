<!DOCTYPE html>
<html lang="ku" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>بۆ تۆ ❤️</title>
    <style>
        body { 
            display: flex; flex-direction: column; align-items: center; justify-content: center; 
            height: 100vh; margin: 0; font-family: sans-serif; background-color: #ffe4e1; 
            text-align: center; overflow: hidden; 
        }
        .main-img { width: 180px; height: auto; margin-bottom: 20px; }
        h1 { font-size: 28px; color: #d32f2f; margin-bottom: 30px; padding: 0 10px; }
        .btn-container { 
            display: flex; justify-content: center; align-items: center; 
            gap: 20px; width: 100%; height: 100px; position: relative; 
        }
        button { 
            border: none; border-radius: 12px; cursor: pointer; 
            font-weight: bold; transition: transform 0.2s ease; font-family: inherit;
            padding: 15px 25px; min-width: 140px;
        }
        /* Both buttons start normal */
        #certainly { background: #4caf50; color: white; font-size: 18px; z-index: 100; position: relative; }
        #yes { background: #f44336; color: white; font-size: 18px; position: relative; z-index: 10; }
    </style>
</head>
<body>
    <div id="main">
        <img class="main-img" src="https://cdn-icons-png.flaticon.com/512/833/833472.png" alt="Heart">
        <h1>ساوین پەپولەیە</h1>
        
        <div class="btn-container">
            <button id="certainly" onclick="win()">بەدڵنیایەوە ❤️</button>
            <button id="yes" onclick="moveAndShrink()">بەڵێ ❤️</button>
        </div>
    </div>

    <script>
        let certainlyScale = 1;
        let yesScale = 1;

        function moveAndShrink() {
            const certainlyBtn = document.getElementById('certainly');
            const yesBtn = document.getElementById('yes');
            
            // Now "Certainly" grows
            certainlyScale += 0.5;
            certainlyBtn.style.transform = `scale(${certainlyScale})`;
            
            // Now "Yes" shrinks but stays visible
            yesScale -= 0.15;
            if (yesScale < 0.5) yesScale = 0.5;
            yesBtn.style.transform = `scale(${yesScale})`;

            // Now "Yes" moves around the screen
            yesBtn.style.position = 'fixed';
            const maxX = window.innerWidth - 160;
            const maxY = window.innerHeight - 100;
            
            const randomX = Math.floor(Math.random() * maxX);
            const randomY = Math.floor(Math.random() * maxY);
            
            yesBtn.style.left = randomX + 'px';
            yesBtn.style.top = randomY + 'px';
        }

        function win() {
            document.getElementById('main').innerHTML = `
                <img style="width:200px" src="https://cdn-icons-png.flaticon.com/512/833/833472.png">
                <h1 style="color: #e91e63;">Yay! ❤️ دەستخۆش</h1>
            `;
        }
    </script>
</body>
</html>
